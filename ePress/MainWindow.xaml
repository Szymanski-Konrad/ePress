<Window x:Class="ePress.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ePress"
        mc:Ignorable="d"
        Title="ePress" Height="400" Width="300">
    <Grid>
        <Image Height="110" Width="300" VerticalAlignment="Top" Source="ePress.png"/>
        <WrapPanel Name="wrap" VerticalAlignment="Bottom">
            <TextBlock Name="Saldo" Height="50" Width="120" Margin="10" FontSize="14" Text="{Binding Path=saldo}"/>
            <TextBlock Name="Dzien" Height="50" Width="120" Margin="10" FontSize="14" Text="{Binding Path=Dzien}"/>
            <Button x:Name="DzialP" Content="Dział Programowy" Height="50" Width="120" Margin="10" Click="DzialP_Click"/>
            <Button x:Name="Druk" Content="Drukarnie" Height="50" Width="120" Margin="10"  Click="Druk_Click"/>
            <Button x:Name="zamowienia" Content="Zamówienia" Height="50" Width="120" Margin="10" Click="zamowienia_Click"/>
            <Button x:Name="Zapis" Content="Zapisz dane" Height="50" Width="120" Margin="10" Click="Zapis_Click"/>
            <Button Name="Nowy" Content="Następny Dzień" Height="50" Width="120" Margin="80,10,10,10" Click="Nowy_Click"/>
        </WrapPanel>
    </Grid>
</Window>
