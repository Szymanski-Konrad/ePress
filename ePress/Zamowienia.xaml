<Window x:Class="ePress.Zamowienia"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ePress"
        mc:Ignorable="d"
        Title="Zamowienia" Height="260" Width="240">
    <Grid>
        <WrapPanel>
            <TextBlock Text="Tytuł" Height="30" Width="100" Margin="5"/>
            <TextBox Text="" Height="30" Width="100" Margin="5"/>
            <TextBlock Text="Typ Książki" Height="30" Width="100" Margin="5"/>
            <ComboBox Height="30" Width="100" Margin="5"/>
            <TextBlock Text="Ilość stron" Height="30" Width="100" Margin="5"/>
            <TextBox Height="30" Width="100" Margin="5"/>
            <TextBlock Text="Autorzy" Height="30" Width="100" TextWrapping="Wrap" Margin="5"/>
            <TextBox Height="60" Width="100" TextWrapping="WrapWithOverflow" Margin="5"/>
        </WrapPanel>
    </Grid>
</Window>
